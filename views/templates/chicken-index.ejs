<!DOCTYPE html>
<html>
<head>
  <title><%= title%> | Chicken Orders</title>
</head>
<body>
  <h1>Orders</h1>
  <a href="/chickennuggets/order">Place an Order</a>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Flavor</th>
        <th>Qty</th>
        <th>Time</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%orders.forEach(function(order){%>
        <tr>
          <td><%= order.name %></td>
          <td><%= order.flavor %></td>
          <td><%= order.qty %></td>
          <td><%= order.createdAt %></td>
          <td>
            <form action="/chickennuggets/order/<%= order._id %>/complete" method='POST'>
              <input type='submit' value="Complete">
              Complete
            </form>
          </td>
        </tr>
      <%});%>
    </tbody>
  </table>
</body>
</html>
